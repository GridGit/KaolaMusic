<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name= "viewport" content="width=device-width,initial-scale=1.0,user-scalable=no"/>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  	<header>
  		<h1><%= title %></h1>
  		<ul class="type" id="type">
  			<li data-type = "dot">dot</li>
  			<li data-type="column" class="selected">column</li>
  		</ul>
  		<div class="playBar">
  			<span class="volume">volume:</span><input id="volume" type="range" min="0" max="100" value="40">
        <span id="forward" class="forward">上一首</span>
        <span id="pause" class="pause">暂停</span>
        <span id="next" class="next">下一首</span>
  		</div>
  	</header>
    <div class="left">
      <div class="musicList">Music List</div>
    	<ul id="list">
    		<% music.forEach(function(name){%>
					<li title="<%= music.indexOf(name)+1%><%= name%>" value = "<%= music.indexOf(name)+1%><%= name%>"><%= music.indexOf(name)+1%>.<%= name%></li>
    		<%})%>
    	</ul>
    </div>
   	<div class="right" id="box"></div>
   	<script type="text/javascript" src="/javascripts/MusicVisualizer.js"></script>
   	<script type="text/javascript" src="/javascripts/index.js"></script>
  </body>
</html>
